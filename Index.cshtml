<div class="container">
<div class="text-center">
    <h1 class="display-4" >ONLINE MOBILE STORE</h1>
   <style>
        body {
           background-color: #006400; /* Dark green color */
           color: #FFFFFF; /* White text color for contrast */
        }
    </style><br>
    <body>
@*btn*@
<div class="button-container">
    <a href="@Url.Action("Product", "Product")" class="btn btn-primary">View Products</a>
    <a href="@Url.Action("MyType", "Type")" class="btn btn-primary">View Types</a>
    <a href="@Url.Action("Brand", "Brand")" class="btn btn-primary">View Brands</a>
